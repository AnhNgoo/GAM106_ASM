    <!-- Profile Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content" style="border: 3px solid var(--mc-primary); border-radius: 12px;">
                <div class="modal-header"
                    style="background: linear-gradient(135deg, var(--mc-primary) 0%, var(--mc-dark) 100%); color: #FFF;">
