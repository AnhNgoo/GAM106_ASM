                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-page-handler="UpdateProfile" enctype="multipart/form-data">
                    <div class="modal-body">
                        @if (TempData["ProfileMessage"] != null)
                        {
                            <div class="alert alert-success">@TempData["ProfileMessage"]</div>
                        }
                        <div class="mb-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.AdminAvatarUrl))
